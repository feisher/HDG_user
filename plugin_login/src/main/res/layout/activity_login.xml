<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:id="@+id/sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/titleLayout"
            layout="@layout/title2"/>
        <ImageView
            android:id="@+id/iv_logo"
            android:background="@mipmap/ic_launcher"
            android:layout_marginTop="86pt"
            android:layout_width="170pt"
            android:layout_height="170pt" />
        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_marginTop="29pt"
            android:textColor="@color/color2"
            android:textSize="42pt" />
        <RelativeLayout
            android:layout_marginTop="150pt"
            android:layout_marginLeft="55pt"
            android:layout_marginRight="55pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_account"
                android:hint="输入手机号"
                android:inputType="phone"
                android:paddingLeft="85pt"
                android:textSize="28pt"
                android:background="@drawable/shape_bg_edittext"
                android:layout_width="match_parent"
                android:layout_height="80pt"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="32pt"
                android:background="@mipmap/ic_phone"
                android:layout_width="38pt"
                android:layout_height="38pt" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_img_authcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36pt"
            android:visibility="gone"
            android:layout_marginLeft="55pt"
            android:layout_marginRight="55pt"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0pt"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_img_authcode"
                    android:background="@drawable/shape_bg_edittext"
                    android:hint="请输入图片验证码"
                    android:textSize="28pt"
                    android:paddingLeft="85pt"
                    android:layout_width="match_parent"
                    android:layout_height="80pt"
                    android:imeOptions="actionSend"
                    android:singleLine="true"
                    />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="32pt"
                    android:background="@mipmap/ic_pic"
                    android:layout_width="38pt"
                    android:layout_height="38pt" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_img_authcode"
                android:gravity="center"
                android:scaleType="fitXY"
                android:background="@color/color3"
                android:layout_marginLeft="10pt"
                android:layout_width="230pt"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36pt"
            android:layout_marginLeft="55pt"
            android:layout_marginRight="55pt"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0pt"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_pwd"
                    android:background="@drawable/shape_bg_edittext"
                    android:hint="输入密码"
                    android:inputType="textPassword"
                    android:textSize="28pt"
                    android:paddingLeft="85pt"
                    android:layout_width="match_parent"
                    android:layout_height="80pt"
                    android:imeOptions="actionSend"
                    android:singleLine="true"
                    />
                <ImageView
                    android:id="@+id/iv_pwd_authcode"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="32pt"
                    android:background="@mipmap/ic_password"
                    android:layout_width="38pt"
                    android:layout_height="38pt" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_authcode"
                android:text="获取验证码"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/shape_round_rect_yellow"
                android:paddingLeft="40pt"
                android:paddingRight="40pt"
                android:layout_marginLeft="10pt"
                android:textSize="30pt"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_authcode_login"
            android:text="短信验证登录"
            android:textColor="@color/color1"
            android:layout_marginTop="130pt"
            android:textSize="30pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_login"
            android:text="登录"
            android:textSize="34pt"
            android:textColor="@color/white"
            android:background="@drawable/shape_bg_shade"
            android:layout_marginTop="35pt"
            android:layout_width="657pt"
            android:layout_height="89pt" />
    </LinearLayout>



</ScrollView>
