<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="114pt"
        android:layout_marginLeft="46pt"
        android:layout_marginRight="46pt"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.yusong.yslib.view.SmoothCheckBox
            android:id="@+id/scb"
            app:duration="0"
            android:layout_width="37pt"
            android:layout_height="37pt" />

        <TextView
            android:id="@+id/tv_setmeal_name"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17pt"
            android:layout_weight="1"
            android:text="**元优惠券可用"
            android:textColor="@color/color4"
            android:textSize="30pt" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:layout_marginLeft="46pt"
        android:layout_marginRight="46pt"
        android:background="@color/color3" />

</LinearLayout>
