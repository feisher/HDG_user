<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="750pt"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/title2"
        android:id="@+id/titleLayout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="107pt"
        android:layout_marginBottom="2pt"
        android:layout_marginTop="2pt"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="20pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_certify"
                android:drawablePadding="12pt"
                android:text="手机验证"
                android:textColor="@color/color1"
                android:textSize="28pt" />
            <ImageView
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_marginRight="20pt"
                android:layout_marginLeft="20pt"
                android:layout_marginTop="14pt"
                android:layout_height="5pt"
                android:background="@color/white" />
        </LinearLayout>

        <ImageView
            android:layout_width="21pt"
            android:layout_height="36pt"
            android:background="@mipmap/ic_right_arrow" />

        <LinearLayout
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实名验证"
                android:drawableRight="@mipmap/ic_certify"
                android:drawablePadding="12pt"
                android:layout_marginTop="20pt"
                android:textColor="@color/color1"
                android:textSize="28pt" />
            <ImageView
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_marginRight="20pt"
                android:layout_marginLeft="20pt"
                android:layout_marginTop="14pt"
                android:layout_height="5pt"
                android:background="@color/white" />
        </LinearLayout>

        <ImageView
            android:layout_width="21pt"
            android:layout_height="36pt"
            android:background="@mipmap/ic_right_arrow" />

        <LinearLayout
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="押金充值"
                android:layout_marginTop="20pt"
                android:textColor="@color/color1"
                android:textSize="28pt" />
            <ImageView
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_marginRight="20pt"
                android:layout_marginLeft="20pt"
                android:layout_marginTop="14pt"
                android:layout_height="5pt"
                android:background="@color/color1" />
        </LinearLayout>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46pt"
                android:layout_marginTop="10pt"
                android:text="电池押金"
                android:textColor="@color/color4"
                android:textSize="44pt" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46pt"
                android:text="押金随时可退，返还原支付账户"
                android:textColor="@color/color4"
                android:textSize="24pt" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_cash_pledge_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46pt"
                android:layout_marginTop="10pt"
                android:text="套餐选择"
                android:textColor="@color/color4"
                android:textSize="44pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46pt"
                android:text="用于换电租金费用，可选择以下几种套餐"
                android:textColor="@color/color4"
                android:textSize="24pt" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_set_meal_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46pt"
                android:text="可用优惠券"
                android:textColor="@color/color4"
                android:textSize="44pt" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_coupon_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Space
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0pt"/>
            <View
                android:background="@drawable/shape_divider"
                android:layout_width="match_parent"
                android:layout_height="2pt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96pt"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_marginTop="10pt"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="48pt"
                    android:text="合计金额："
                    android:textSize="30pt" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="0pt"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="￥0.00"
                    android:textColor="@color/color6"
                    android:textSize="44pt" />

                <TextView
                    android:id="@+id/tv_commit"
                    android:layout_width="273pt"
                    android:layout_height="match_parent"
                    android:background="@color/color5"
                    android:gravity="center"
                    android:text="提交订单"
                    android:textColor="@color/white"
                    android:textSize="36pt" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
