<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/title2"
            android:id="@+id/titleLayout"/>
        <View
            android:layout_width="match_parent"
            android:background="@color/color3"
            android:layout_height="2pt"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="107pt"
            android:layout_marginBottom="2pt"
            android:layout_marginTop="2pt"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20pt"
                    android:drawablePadding="12pt"
                    android:drawableRight="@mipmap/ic_certify"
                    android:text="手机验证"
                    android:textColor="@color/color1"
                    android:textSize="28pt" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5pt"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="20pt"
                    android:layout_marginRight="20pt"
                    android:layout_marginTop="14pt"
                    android:background="@color/white" />
            </LinearLayout>

            <ImageView
                android:layout_width="21pt"
                android:layout_height="36pt"
                android:background="@mipmap/ic_right_arrow" />

            <LinearLayout
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20pt"
                    android:drawablePadding="12pt"
                    android:text="实名验证"
                    android:textColor="@color/color1"
                    android:textSize="28pt" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5pt"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="20pt"
                    android:layout_marginRight="20pt"
                    android:layout_marginTop="14pt"
                    android:background="@color/color1" />
            </LinearLayout>

            <ImageView
                android:layout_width="21pt"
                android:layout_height="36pt"
                android:background="@mipmap/ic_right_arrow" />

            <LinearLayout
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20pt"
                    android:text="押金充值"
                    android:textColor="@color/color4"
                    android:textSize="28pt" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5pt"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="20pt"
                    android:layout_marginRight="20pt"
                    android:layout_marginTop="14pt"
                    android:background="@color/white" />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/color3"
            android:layout_height="2pt"/>
        <EditText
            android:background="@drawable/shape_bg_edittext"
            android:id="@+id/et_real_name"
            android:layout_width="match_parent"
            android:layout_height="96pt"
            android:layout_marginLeft="46pt"
            android:layout_marginRight="46pt"
            android:layout_marginTop="40pt"
            android:drawableLeft="@mipmap/ic_name"
            android:drawablePadding="15pt"
            android:hint="输入真实姓名"
            android:paddingLeft="15pt"
            android:textSize="30pt" />

        <EditText
            android:id="@+id/et_id_number"
            android:layout_width="match_parent"
            android:layout_height="96pt"
            android:layout_marginLeft="46pt"
            android:layout_marginRight="46pt"
            android:drawableLeft="@mipmap/ic_identity"
            android:drawablePadding="15pt"
            android:layout_marginTop="30pt"
            android:background="@drawable/shape_bg_edittext"
            android:hint="身份证号码"
            android:paddingLeft="15pt"
            android:textSize="30pt" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="96pt"
            android:layout_marginLeft="46pt"
            android:layout_marginRight="46pt"
            android:layout_marginTop="30pt"
            android:background="@drawable/shape_bg_edittext"
            android:drawableLeft="@mipmap/ic_password"
            android:drawablePadding="15pt"
            android:hint="登录密码"
            android:inputType="textPassword"
            android:paddingLeft="15pt"
            android:textSize="30pt" />

        <EditText
            android:id="@+id/et_pwd2"
            android:layout_width="match_parent"
            android:layout_height="96pt"
            android:layout_marginLeft="46pt"
            android:layout_marginTop="30pt"
            android:background="@drawable/shape_bg_edittext"
            android:layout_marginRight="46pt"
            android:drawableLeft="@mipmap/ic_confirm_pwd"
            android:drawablePadding="15pt"
            android:hint="确认登录密码"
            android:inputType="textPassword"
            android:paddingLeft="15pt"
            android:textSize="30pt" />

        <LinearLayout
            android:id="@+id/ll_batterey_type"
            android:layout_width="match_parent"
            android:layout_height="96pt"
            android:layout_marginTop="30pt"
            android:background="@drawable/shape_bg_edittext"
            android:layout_marginLeft="46pt"
            android:layout_marginRight="46pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_batterey_type"
                android:layout_width="0pt"
                android:layout_height="94pt"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/ic_battery"
                android:drawablePadding="15pt"
                android:gravity="center_vertical"
                android:hint="选择电池型号"
                android:paddingLeft="15pt"
                android:textSize="30pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="94pt"
                android:gravity="center_vertical"
                android:text=" ▼ "
                android:textSize="36pt" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_company"
            android:layout_width="match_parent"
            android:layout_height="96pt"
            android:layout_marginTop="30pt"
            android:background="@drawable/shape_bg_edittext"
            android:layout_marginLeft="46pt"
            android:layout_marginRight="46pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_company"
                android:layout_width="0pt"
                android:layout_height="94pt"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/ic_unit"
                android:drawablePadding="15pt"
                android:gravity="center_vertical"
                android:hint="所属公司（单位）"
                android:paddingLeft="15pt"
                android:textSize="30pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="94pt"
                android:gravity="center_vertical"
                android:text=" ▼ "
                android:textSize="36pt" />
        </LinearLayout>


        <Button
            android:id="@+id/btn_next"
            android:layout_width="657pt"
            android:layout_height="89pt"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80pt"
            android:background="@drawable/shape_round_rect_blue"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="34pt" />
    </LinearLayout>


</ScrollView>
